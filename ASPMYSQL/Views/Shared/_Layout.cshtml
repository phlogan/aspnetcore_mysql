<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @RenderSection("Styles", required: false)
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>

<body>
    @await Html.PartialAsync("~/Views/Shared/_Header.cshtml")
    @await Html.PartialAsync("~/Views/Shared/_PanelMessage.cshtml")
    <main>
        @RenderBody();
    </main>

    @await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")

</body>
</html>
@RenderSection("Scripts", required: false)

<style>
    h1, h2, h3, a, i {
        color: #6b7db3;
    }

    .btn {
        background-color: #6b7db3;
        border-color: #6b7db3;
    }

        .btn:hover {
            background-color: #4b647d;
            border-color: #4b647d;
        }

        .btn > i {
            color: #e5f2ff;
        }

        .btn:active {
            background-color: #4b647d !important;
            border-color: #4b647d;
        }

    .btn-floating:active {
        background-color: #4b647d !important;
        border-color: #4b647d;
    }

    .btn-remove {
        background-color: #ff6347;
        border-color: #ff6347;
    }

    .validation-summary-errors {
        color: red;
        font-weight: bold;
    }

    body {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
    }

    main {
        flex: 1 0 auto;
    }

    select {
        display: block;
    }
    .main-breadcrumb {
        background-color: #6b7db3;
    }
    .breadcrumb 
    {
        font-size: 16px
    }
</style>