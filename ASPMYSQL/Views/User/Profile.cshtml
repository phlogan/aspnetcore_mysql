@using BL.ViewModels
@model UserViewModel
@{
    ViewBag.Title = "Profile";
}
<nav class="main-breadcrumb">
    <div class="nav-wrapper">
        <div class="col s12">
            <a href="@Url.Action("Index", "Home")" class="breadcrumb">Home</a>
            <a class="breadcrumb">Perfil</a>
        </div>
    </div>
</nav>
<div class="center row" style="background-color: #6b7db3">
    <div class="col s4 offset-s4">
        <h4>@Model.Username</h4>
        <h4>@Model.Email</h4>
        <a href="@Url.Action("EditProfile, User")">Editar informações<i class="material-icons">mode_edit</i></a>
    </div>
</div>

<div class="container">
    <h4>Ações</h4>
    <div class="row">
        <a href="@Url.Action("View", "User", new { id = Model.UserId })">Visualizar suas informações detalhadas</a>
    </div>
    @if (ViewBag.CanListUsers)
    {
        <div class="row">
            <a href="@Url.Action("List", "User")">Listagem de usuários</a>
        </div>
    }

    @if (ViewBag.CanAddUsers)
    {
        <div class="row">
            <a href="@Url.Action("New", "User")">Criar usuário</a>
        </div>
    }
</div>
